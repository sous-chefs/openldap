#
# Generated by Chef for <%= node.name %>
#

uri <%= node['openldap']['server_uri'] %>

# Where to find data
base <%= node['openldap']['basedn'] %>
scope sub

<% node['openldap']['nss_base'].each do |key, values| %>
<% values.each do |value| %>
nss_base_<%= key %> <%= value %>
<% end %>
<% end %>

<% if node['openldap']['tls_enabled'] -%>
# TLS Options
ssl start_tls
<% if node['openldap']['tls_checkpeer'] -%>
tls_checkpeer yes
<% else -%>
tls_checkpeer no
<% end -%>
<% end -%>

<% node['openldap']['client_config_hash'].each do |key, value| -%>
<%   case value -%>
<%   when nil -%>
<%= key %>
<%   when Array -%>
<%= key %>
<%     value.each do |v| -%>
  <%= v %>
<%     end -%>
<%   when String, Integer -%>
<%=    key %> <%= value %>
<%   end -%>
<% end -%>
